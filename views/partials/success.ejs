<% if (success === 'true') {%>
<div class="toast-container position-fixed bottom-0 end-0 p-3">
  <div
    id="liveToast"
    class="toast text-bg-success show"
    role="alert"
    aria-live="assertive"
    aria-atomic="true"
  >
    <div class="toast-header">
      <strong class="me-auto">Database Updated</strong>
      <small>Just now</small>
      <button
        type="button"
        class="btn-close"
        data-bs-dismiss="toast"
        aria-label="Close"
      ></button>
    </div>
    <div class="toast-body">
      <%= locals.method === "new" ? "Successfully added new item!" :
      "Successfully updated an item!" %>
    </div>
  </div>
</div>
<% } %>
