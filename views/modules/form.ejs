<div class="col-10 mt-3 pb-5 ms-auto overflow-y-auto" style="height: 100vh;">
    <h1 class="text-center mb-5"><%= action === "new" ? "Add New Item" : "Edit Item" %></h1>
    <div class="container-fluid d-flex flex-column align-items-center">
        <% if (action === 'new') { %>
            <form action="/new" method="post" style="width: 500px;">
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="itemName" name="itemName" placeholder="Milk">
                    <label for="itemName">Item Name</label>
                </div>
                <div class="input-group mb-3">
                    <span class="input-group-text">$</span>
                    <div class="form-floating">
                        <input type="text" class="form-control" placeholder="Price" id="price" name="price" aria-describedby="basic-addon1">
                        <label for="price">Price</label>
                    </div>
                </div>
                <div class="input-group mb-3">
                    <div class="form-floating">
                        <input type="number" min="0" max="1000" class="form-control" id="serving" name="serving" placeholder="Number of items">
                        <label for="serving">Serving Size</label>
                    </div>
                    <div class="form-floating">
                        <select name="size" id="size" class="form-select">
                            <option selected value="oz">oz</option>
                            <option value="lb">lb</option>
                            <option value="gal">gal</option>
                            <option value="pack">pack</option>
                            <option value="bottle">bottle</option>
                            <option value="bag">bag</option>
                            <option value="quart">quart</option>
                            <option value="count">count</option>
                            <option value="liter">liter</option>
                            <option value="box">box</option>
                            <option value="bunch">bunch</option>
                            <option value="head">head</option>
                        </select>
                        <label for="size">Unit</label>
                    </div>
                </div>
                <div class="form-floating mb-3">
                    <input type="number" class="form-control" id="count" name="count" placeholder="Number of items">
                    <label for="count">Number of Items</label>
                </div>
                <div class="form-floating mb-3">
                    <select class="form-select" id="category" name="category">
                        <option selected value="meat">Meat</option>
                        <option value="produce">Produce</option>
                        <option value="beverages">Beverages</option>
                        <option value="household">Household</option>
                        <option value="junk">Junk</option>
                    </select>
                    <label for="category">Category</label>
                </div>
                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        <% } else { %>
            <form action="/update/:name/:price/:serving/:size/:count" method="post" style="width: 500px;">
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" value="<%= name %>" id="itemName" name="itemName" placeholder="Milk" disabled>
                    <label for="itemName">Item Name</label>
                </div>
                <div class="input-group mb-3">
                    <span class="input-group-text">$</span>
                    <div class="form-floating">
                        <input type="text" class="form-control" value="<%= price %>" placeholder="Price" id="price" name="price" aria-describedby="basic-addon1">
                        <label for="price">Price</label>
                    </div>
                </div>
                <div class="input-group mb-3">
                    <div class="form-floating">
                        <input type="number" min="0" max="1000" class="form-control" value="<%= serving %>" id="serving" name="serving" placeholder="Number of items" disabled>
                        <label for="serving">Serving Size</label>
                    </div>
                    <div class="form-floating">
                        <select name="size" id="size" class="form-select" disabled>
                            <option value="oz" <%= size === 'oz' ? 'selected' : '' %>>oz</option>
                            <option value="lb" <%= size === 'lb' ? 'selected' : '' %>>lb</option>
                            <option value="gal" <%= size === 'gal' ? 'selected' : '' %>>gal</option>
                            <option value="pack" <%= size === 'pack' ? 'selected' : '' %>>pack</option>
                            <option value="bottle" <%= size === 'bottle' ? 'selected' : '' %>>bottle</option>
                            <option value="bag" <%= size === 'bag' ? 'selected' : '' %>>bag</option>
                            <option value="quart" <%= size === 'quart' ? 'selected' : '' %>>quart</option>
                            <option value="count" <%= size === 'count' ? 'selected' : '' %>>count</option>
                            <option value="liter" <%= size === 'liter' ? 'selected' : '' %>>liter</option>
                            <option value="box" <%= size === 'box' ? 'selected' : '' %>>box</option>
                            <option value="bunch" <%= size === 'bunch' ? 'selected' : '' %>>bunch</option>
                            <option value="head" <%= size === 'head' ? 'selected' : '' %>>head</option>
                        </select>
                        <label for="size">Unit</label>
                    </div>
                </div>
                <div class="form-floating mb-3">
                    <input type="number" class="form-control" value="<%= count %>" id="count" name="count" placeholder="Number of items">
                    <label for="count">Number of Items</label>
                </div>
                <div class="form-floating mb-3">
                    <select class="form-select" id="category" name="category" disabled>
                        <option value="meat" <%= category === 'meat' ? 'selected' : '' %>>Meat</option>
                        <option value="produce" <%= category === 'produce' ? 'selected' : '' %>>Produce</option>
                        <option value="beverages" <%= category === 'beverages' ? 'selected' : '' %>>Beverages</option>
                        <option value="household" <%= category === 'household' ? 'selected' : '' %>>Household</option>
                        <option value="junk" <%= category === 'junk' ? 'selected' : '' %>>Junk</option>
                    </select>
                    <label for="category">Category</label>
                </div>
                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        <% } %>
    </div>
</div>