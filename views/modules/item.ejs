<div class="col-10 mt-3 pb-5 ms-auto overflow-y-auto" style="height: 100vh;">
    <h1 class="text-center mb-5"><%= item.name %></h1>
    <div class="container-fluid">
        <div class="d-flex flex-row flex-wrap gap-5 justify-content-center">
            <div class="card text-bg-primary p-3" style="width: 20rem;">
                <div class="card-body">
                    <h3 class="card-title">
                        <%= item.serving %> <%= item.size %>
                    </h3>
                    <p class="card-text">
                        serving size
                    </p>
                </div>
            </div>
            <div class="card text-bg-primary p-3" style="width: 20rem;">
                <div class="card-body">
                    <h3 class="card-title">
                        $<%= item.price %>
                    </h3>
                    <p class="card-text">
                        per serving
                    </p>
                </div>
            </div>
            <div class="card text-bg-primary p-3" style="width: 20rem;">
                <div class="card-body">
                    <h3 class="card-title">
                        <%= item.count %>
                    </h3>
                    <p class="card-text">
                        number of items
                    </p>
                </div>
            </div>
            <div class="card text-bg-primary p-3" style="width: 20rem;">
                <div class="card-body">
                    <h3 class="card-title">
                        $<%= item.price * item.count %>
                    </h3>
                    <p class="card-text">
                        total value
                    </p>
                </div>
            </div>
        </div>
        <div class="d-flex flex-row gap-2 mt-5 justify-content-center">
            <a href="/update/<%= category %>/<%= item.name %>/<%= item.price %>/<%= item.serving %>/<%= item.size %>/<%= item.count %>" role="button" class="btn btn-primary">Edit item</a>
            <a href="#" role="button" class="btn btn-danger">Delete item</a>
        </div>
    </div>
</div>